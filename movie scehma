const mongoose = require("mongoose");

const MovieSchema = new mongoose.Schema(
  {
    title: { type: String, required: true, unique: true },
    description: { type: String }, // Renamed 'desc' to 'description'
    thumbnail: { type: String, alias: "imgSm" }, // Added 'thumbnail' and aliased it to 'imgSm'
    title1: { type: String, alias: "imgTitle" }, // Added 'title1' and aliased it to 'imgTitle'
    rating: { type: Number }, // Added 'rating'
    duration: { type: String }, // Added 'duration'
    genre: [{ type: String }], // Changed 'genre' to an array
    release_date: { type: Date, alias: "year" }, // Added 'release_date' and aliased it to 'year'
    director: { type: String }, // Added 'director'
    actors: [{ type: String }], // Changed 'actors' to an array
    language: { type: String }, // Added 'language'
    country: { type: String }, // Added 'country'
    url: { type: String, alias: "video" }, // Added 'url' and aliased it to 'video'
    isSeries: { type: Boolean, default: false },
    img: { type: String } // Added 'img' field from the left schema
  },
  { timestamps: true }
);

module.exports = mongoose.model("Movie", MovieSchema);
